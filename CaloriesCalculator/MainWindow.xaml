<Window x:Class="CaloriesCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaloriesCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="382.379" Width="575.881">
    <Grid Margin="0,0,-8,-21">
        <TextBox x:Name="AgeBox" HorizontalAlignment="Left" Height="23" Margin="67,59,0,0" TextWrapping="Wrap" Text="Age" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="HeightBox" HorizontalAlignment="Left" Height="23" Margin="67,87,0,0" TextWrapping="Wrap" Text="Height[m]" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="WeightBox" HorizontalAlignment="Left" Height="23" Margin="67,115,0,0" TextWrapping="Wrap" Text="Weight[kg]" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ResultBox" HorizontalAlignment="Left" Height="23" Margin="257,87,0,0" TextWrapping="Wrap" Text="Calories required" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Calculate" HorizontalAlignment="Left" Margin="181,174,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
